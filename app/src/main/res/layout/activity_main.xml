<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landingTitle"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <Button
        android:id="@+id/electorateButton"
        android:layout_width="363dp"
        android:layout_height="52dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/my_button"
        android:text="Electorate Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/policyButton"
        android:layout_width="363dp"
        android:layout_height="52dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/my_button"
        android:text="Policy Info"
        app:layout_constraintBottom_toTopOf="@+id/electorateButton"
        app:layout_constraintEnd_toEndOf="@+id/electorateButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/electorateButton"
        app:layout_constraintTop_toBottomOf="@+id/quizButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/partyButton"
        android:layout_width="361dp"
        android:layout_height="52dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/my_button"
        android:text="Party Info"
        app:layout_constraintBottom_toTopOf="@+id/quizButton"
        app:layout_constraintEnd_toEndOf="@+id/quizButton" />

    <Button
        android:id="@+id/quizButton"
        android:layout_width="363dp"
        android:layout_height="52dp"
        android:background="#4CAF50"
        android:text="Take the Quiz"
        app:layout_constraintEnd_toEndOf="@+id/policyButton"
        tools:layout_editor_absoluteY="335dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="386dp" />


