<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/teal_200">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:textSize="40sp"
        android:text="@string/landingTitle"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/quizButton"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/my_button"
        android:text="Start the Quiz"
        app:layout_constraintBottom_toTopOf="@+id/partyButton"
        app:layout_constraintEnd_toEndOf="@+id/partyButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/partyButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/partyButton"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_button"
        android:text="Party Info"
        app:layout_constraintBottom_toTopOf="@+id/policyButton"
        app:layout_constraintEnd_toEndOf="@+id/policyButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/policyButton"
        app:layout_constraintTop_toBottomOf="@+id/quizButton" />

    <Button
        android:id="@+id/policyButton"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_button"
        android:text="Policy Info"
        app:layout_constraintBottom_toTopOf="@+id/electorateButton"
        app:layout_constraintEnd_toEndOf="@+id/electorateButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/electorateButton"
        app:layout_constraintTop_toBottomOf="@+id/partyButton" />

    <Button
        android:id="@+id/electorateButton"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_button"
        android:text="Electorate Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/policyButton"
        app:layout_constraintVertical_bias="0.0" />


