<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09064E"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/electorateButton"
        android:layout_width="370dp"
        android:layout_height="53dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/my_button"
        android:text="@string/electorateInfo"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/policyButton"
        android:layout_width="363dp"
        android:layout_height="52dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/my_button"
        android:text="@string/policyInfo"
        android:textColor="#000000"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/electorateButton"
        app:layout_constraintEnd_toEndOf="@+id/electorateButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/electorateButton" />

    <Button
        android:id="@+id/partyButton"
        android:layout_width="361dp"
        android:layout_height="52dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/my_button"
        android:text="@string/partyInfo"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/policyButton"
        app:layout_constraintEnd_toEndOf="@+id/policyButton" />

    <Button
        android:id="@+id/quizButton"
        android:layout_width="363dp"
        android:layout_height="52dp"
        android:layout_marginBottom="25dp"
        android:background="#4CAF50"
        android:text="@string/takeQuiz"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/partyButton"
        app:layout_constraintEnd_toEndOf="@+id/partyButton" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="386dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="374dp"
        android:layout_height="247dp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_2"
        tools:layout_editor_absoluteX="37dp" />


